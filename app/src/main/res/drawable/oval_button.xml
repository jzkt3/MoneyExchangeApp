<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <gradient android:angle="90" android:endColor="@color/primaryColorDark" android:startColor="@color/primaryColorDark" />
        <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
        <corners android:radius="30dp" />
    </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="90" android:endColor="@color/primaryColorDark" android:startColor="@color/primaryColorLight" />
            <padding android:bottom="6dp" android:left="6dp" android:right="6dp" android:top="6dp" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>