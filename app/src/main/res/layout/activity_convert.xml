<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jzkt3.umkc.edu.testtestetestsetestsetes.ConvertActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <EditText
        android:id="@+id/editDollars"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/app_bar"
        android:clickable="true"
        android:hint="U.S Dollars"
        android:inputType="numberDecimal"
        android:maxLength="20" />

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_button_text"
        android:layout_below="@+id/editDollars"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="222.22"
        android:id="@+id/convertedText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratesSpinner"
        android:layout_below="@+id/editDollars"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
